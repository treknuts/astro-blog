---
import { GoogleAnalytics } from "astro-analytics";
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <!-- Should move this to a prop probably for changing it for every page. Namely articles -->
    <meta name="description" content="Treknuts software development blog" />
    <title>{pageTitle}</title>
    <ViewTransitions />
  </head>
  <GoogleAnalytics id="G-SWKSW1YNC6" />
  <body>
    <Header />
    <main>
      <h1>{pageTitle}</h1>
      <slot />
    </main>
    <Footer />
    <script>
      import "../scripts/theme.js";
    </script>
  </body>
</html>
