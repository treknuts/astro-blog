---
import { Image } from "astro:assets";
import formatDate from "../scripts/format-date";

const { article } = Astro.props;
const formattedDate = formatDate(article.frontmatter.pubDate);
---

<style>
  .article-card {
    display: flex;
    flex-direction: column;
    padding: 0;
    border-radius: 1em;
    width: 100%;
    background-color: var(--secondary);
    position: relative;
    box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
  }

  .image-wrapper {
    width: 100%;
    height: 250px;
  }

  .image-wrapper > img {
    object-fit: cover;
    border-radius: 1em 1em 0 0;
    width: 100%;
    height: 100%;
  }
  .card-body {
    padding: 0.5em;
  }

  .card-body p {
    margin: 0;
  }

  .article-link {
    color: inherit;
    text-decoration: none;
    transition: scale 200ms ease;
  }

  .article-link:hover,
  .article-link:focus {
    scale: 1.035;
  }

  @media screen and (min-width: 636px) {
    .article-card {
      flex-direction: row;
    }

    .image-wrapper {
      max-width: 40%;
      min-height: 225px;
      max-height: 225px;
    }

    .image-wrapper > img {
      object-fit: cover;
      width: 100%;
      height: 100%;
      border-radius: 1em 0 0 1em;
    }
    .card-body {
      padding: 2em;
    }
  }
</style>

<a class="article-link" href={article.url}>
  <div class="article-card">
    <div class="image-wrapper">
      <Image
        transition:name={article.frontmatter.slug}
        src={article.frontmatter.image.url}
        alt={article.frontmatter.image.alt}
        width="310"
        height="225"
      />
    </div>
    <div class="card-body">
      <h3>
        {article.frontmatter.title}
      </h3>
      <p>{formattedDate}</p>
      <p>{article.frontmatter.description}</p>
    </div>
  </div>
</a>
