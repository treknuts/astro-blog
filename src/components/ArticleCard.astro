---
const { article } = Astro.props;
---

<style>
  .article-card {
    display: flex;
    padding: 0;
    border-radius: 0.5em;
    width: 100%;
    background-color: var(--secondary);
    position: relative;
    box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
  }

  .image-wrapper {
    width: 50%;
    min-height: 225px;
    max-height: 225px;
  }

  .image-wrapper > img {
    object-fit: cover;
    width: 100%;
    height: 100%;
    border-top-left-radius: 0.5em;
    border-bottom-left-radius: 0.5em;
  }

  .card-body {
    padding: 2em;
  }
</style>

<div class="article-card">
  <div class="image-wrapper">
    <img
      transition:name={article.frontmatter.slug}
      src={article.frontmatter.image.url}
      alt={article.frontmatter.image.alt}
    />
  </div>
  <div class="card-body">
    <a href={article.url}><h4>{article.frontmatter.title}</h4></a>
    <p>{article.frontmatter.description}</p>
  </div>
</div>
