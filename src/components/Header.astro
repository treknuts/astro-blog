---
import "../styles/global.css";
import Navigation from "./Navigation.astro";
import ThemeToggle from "./ThemeToggle.svelte";
import MobileNavButton from "./MobileNavButton.svelte";
---

<style>
  .nav-right {
    display: flex;
    align-items: center;
    gap: 1em;
    position: relative;
  }

  .nav-right a {
    color: inherit;
    text-decoration: none;
    position: relative;
  }

  .vertical-rule {
    height: 30px;
    width: 2px;
    background-color: var(--text);
  }
</style>

<header>
  <nav>
    <MobileNavButton transition:persist client:load />
    <Navigation />
    <div class="nav-right">
      <ThemeToggle transition:persist client:load />
      <div class="vertical-rule"></div>
      <a href="/rss.xml" target="_blank" rel="noreferrer">
        <i class="fa-solid fa-rss fa-2x"></i>
      </a>
    </div>
  </nav>
</header>
