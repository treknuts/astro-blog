---
import "../styles/global.css";
---

<style>
  .row {
    margin-block: 2em;
    display: grid;
    gap: 1em;
  }
  @media screen and (min-width: 768px) {
    .row {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<div class="row">
  <div class="col">
    <slot name="left" />
  </div>
  <div class="col">
    <slot name="right" />
  </div>
</div>
